---
/**
 * @file Base layout component for the application.
 * This layout provides the basic HTML structure, including the head and body tags.
 * @module layouts/Layout
 */
import "../styles/global.css";

/**
 * Props for the Layout component.
 * @interface Props
 * @property {string} [title="Employee Assessment System"] - The title of the page.
 */
interface Props {
  title?: string;
}

const { title = "Employee Assessment System" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
