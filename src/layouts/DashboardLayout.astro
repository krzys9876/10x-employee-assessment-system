---
/**
 * @file Dashboard layout component.
 * This layout is used for pages within the authenticated dashboard section of the application.
 * It extends the base `Layout` component.
 * @module layouts/DashboardLayout
 * @see module:layouts/Layout
 */
import Layout from "./Layout.astro";

/**
 * Props for the DashboardLayout component.
 * @interface Props
 * @property {string} [title="Dashboard | Employee Assessment System"] - The title of the page.
 */
interface Props {
  title?: string;
}

const { title = "Dashboard | Employee Assessment System" } = Astro.props;
---

<Layout title={title}>
  <main class="min-h-screen bg-slate-50 dark:bg-slate-900 pb-12">
    <slot />
  </main>
</Layout>
